<view class="g-search-bigbox">
	<view class="g-search-box">
		<image src="/images/icon-1.png" class="u-icon"></image>
		<input value="{= keyword =}" maxlength="20"  placeholder="寒假作业" bindinput="inputKey" />
	</view>
	<view class="u-search-btn" bindtap="gotosearchlist">搜索</view>
</view>
<view class="g-hot-search">
	<text class="u-h3">热门搜索</text>
	<view class="m-cont">
		<view class="u-link" data-val="{{item.name}}" bindtap="hotgoin" s-for="{{hotsearchData}}">{{item.name}}</view>
	</view>
</view>